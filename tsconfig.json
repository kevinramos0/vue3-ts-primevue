{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "useUnknownInCatchVariables": false,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ],
  "exclude": [
    "node_modules"
  ]
}
